@model ICollection<PL.Models.PizzaViewModel>
@{
    ViewBag.Title = "Make an order";
}

<style>
    .block {
        visibility: hidden
    }

    .holder:hover .block {
        visibility: visible
    }

    .block:hover {
        visibility: visible
    }

    .grow:hover {
        -webkit-transform: scale(1.05);
        -ms-transform: scale(1.05);
        transform: scale(1.05);
    }
</style>

<h2>@ViewBag.Title</h2>
<hr />
@if (Model != null)
{
    <div class="row row-cols-1 row-cols-md-4 g-4">

        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card mb-3 shadow holder grow h-100">
                    <img src="@item.Image" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text overflow-multiply">Price: @item.Price $</p>
                        <div class="block">
                            @Html.ActionLink("Choose", "AddPizza", "Order", new { id = item.Id, name = item.Name, price = item.Price, image = item.Image }, new { @class = "btn btn-warning stretched-link" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
<br />
<hr />

@Html.ActionLink("ShoppingBasket", "ShoppingBasket", "Order", new { @class = "btn btn-dark btn-block btn-lg" })


